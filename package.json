{
  "name": "chatgpt-code-review",
  "displayName": "ChatGPT Code Review",
  "description": "Code review and debugging tool integrated with ChatGPT",
  "version": "0.0.1",
  "publisher": "publisher",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.analyzeCode"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
        {
          "command": "extension.analyzeCode",
          "title": "Analyze Code with ChatGPT"
        }
    ],
    "viewsContainers": {
        "activitybar": [
            {
                "id": "chatgpt-code-review",
                "title": "ChatGPT Code Review",
                "icon": "media/chatgpt-icon.png"
            }
        ]
    },
    "views": {
        "chatgpt-code-review": [
            {
            "id": "changedFiles",
            "name": "Changed Files",
            "when": "chatgpt-code-review:isAnalyzing"
            },
            {
            "id": "comments",
            "name": "ChatGPT Comments",
            "when": "chatgpt-code-review:isAnalyzing && chatgpt-code-review:fileSelected"
            },
            {
            "id": "summary",
            "name": "Summary",
            "when": "chatgpt-code-review:isAnalyzing && chatgpt-code-review:fileSelected"
            }
        ]
    },
    "menus": {
        "editor/context": [
          {
            "command": "extension.analyzeCode",
            "group": "navigation"
          }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^14.17.8",
    "@types/vscode": "^1.62.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "minimatch": "^9.0.0",
    "openai": "^3.2.1",
    "simple-git": "^3.18.0"
  }
}
